# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/opensspm?sslmode=disable

# Server
HTTP_ADDR=:8080
AUTH_COOKIE_SECURE=0
RESYNC_ENABLED=1
RESYNC_MODE=inline
GLOBAL_EVAL_MODE=best_effort

# Dev convenience: seed admin@admin.com / admin if no auth users exist.
# DEV_SEED_ADMIN=0

# Connector credentials are configured in-app under Settings -> Connectors.

# Sync
SYNC_INTERVAL=15m

# Optional per-connector intervals (leave unset to run every sync pass)
# SYNC_OKTA_INTERVAL=15m
# SYNC_ENTRA_INTERVAL=15m
# SYNC_GITHUB_INTERVAL=15m
# SYNC_DATADOG_INTERVAL=15m
# SYNC_AWS_INTERVAL=15m
# SYNC_FAILURE_BACKOFF_MAX=2h

SYNC_OKTA_WORKERS=3
SYNC_GITHUB_WORKERS=6
SYNC_DATADOG_WORKERS=3
